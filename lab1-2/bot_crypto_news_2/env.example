# Конфигурация News Aggregator Bot

# Токен Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# API ключ для News API (опционально)
NEWS_API_KEY=your_news_api_key_here

# API ключ для Mediastack (опционально)
MEDIASTACK_API_KEY=your_mediastack_api_key_here

# Настройки базы данных
DATABASE_FILE=bot_data.json

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Настройки прокси (если необходимо)
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Настройки интервала обновления новостей (в минутах)
NEWS_UPDATE_INTERVAL=60

# Максимальное количество новостей в дайджесте
MAX_DIGEST_NEWS=10

# Таймаут для HTTP запросов (в секундах)
HTTP_TIMEOUT=30

# NewsAPI.org
NEWSAPI_KEY=
